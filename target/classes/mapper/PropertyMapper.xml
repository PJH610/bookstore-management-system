<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookstore.dao.PropertyDao">
    <resultMap id="propertyResultMap" type="com.bookstore.bean.Property">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <association property="category" column="id" select="com.bookstore.dao.select" />
    </resultMap>
    <select id="select" resultMap="propertyResultMap" parameterType="java.lang.Long">
        select p.id,p.name,c.id,c.name
        from tb_product p left join tb_category c
                on p.category_id=c.id
    </select>
</mapper>